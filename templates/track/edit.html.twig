    <h1>Edit Track</h1>

    {{ include('track/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="row">
        <div class="col-auto">
            <button type="submit" form="track-form" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
        <div class="col-auto">
            <a class="btn btn-secondary" href="{{ path('app_track_index') }}">back to tracks list</a>
        </div>
        <div class="col-auto">
            {{ include('track/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
